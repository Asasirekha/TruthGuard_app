    <script>
        const examples = {
            1: "SHOCKING: Scientists ADMIT that drinking lemon water every morning actually CAUSES bone cancer! Share this to save a life!",
            2: "BREAKING: Government officials SECRETLY meeting to ban all social media by 2025! They don't want you to know this! Share before it's deleted!",
            3: "Urgent! Bank error means FREE MONEY for everyone! Just click this link and claim your $5000 before midnight! Limited time only!"
        };

        function loadExample(num) {
            document.getElementById('contentInput').value = examples[num];
        }

        function analyzeContent() {
            const content = document.getElementById('contentInput').value.trim();
            if (!content) {
                alert('Please paste some content to analyze first!');
                return;
            }

            // Show loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('results').style.display = 'none';
            
            // Simulate AI processing time
            setTimeout(() => {
                showAnalysis(content);
            }, 2000);
        }

        function showAnalysis(content) {
            document.getElementById('loading').style.display = 'none';
            
            const analysis = generateAnalysis(content);
            document.getElementById('results').innerHTML = analysis;
            document.getElementById('results').style.display = 'block';
        }

        function generateAnalysis(content) {
            // This is a demonstration - in a real app, this would call your AI service
            const lowerContent = content.toLowerCase();
            
            let redFlags = [];
            let actionSteps = [];
            let riskLevel = "Medium";
            let conclusion = "";

            // Detect common misinformation patterns
            if (content.includes('SHOCKING') || content.includes('BREAKING') || /[A-Z]{4,}/.test(content)) {
                redFlags.push({
                    title: "Emotional & Alarmist Language",
                    what: `Words like "${content.match(/[A-Z]{4,}/g)?.join('", "') || 'SHOCKING/BREAKING'}" in all caps, designed to trigger fear and urgency.`,
                    why: "Credible information is usually presented calmly and factually, not like sensational headlines designed to grab attention."
                });
                riskLevel = "High";
            }

            if (lowerContent.includes('scientists') && !content.includes('University') && !content.includes('Study') && !content.includes('Journal')) {
                redFlags.push({
                    title: "Vague Authority Claims",
                    what: `The claim mentions "scientists" but provides no specific names, institutions, or studies.`,
                    why: "Real scientific breakthroughs are always backed by citable research from reputable organizations with specific details."
                });
            }

            if (lowerContent.includes('share') || lowerContent.includes('forward') || lowerContent.includes('send this')) {
                redFlags.push({
                    title: "Viral Sharing Appeal",
                    what: `The text explicitly encourages sharing or forwarding.`,
                    why: "Misinformation often relies on going viral. Credible information spreads because it's useful and true, not because it begs to be shared."
                });
            }

            if (lowerContent.includes('free money') || lowerContent.includes('click this link') || lowerContent.includes('limited time')) {
                redFlags.push({
                    title: "Scam Indicators",
                    what: `Contains typical scam language like "free money," "click this link," or "limited time."`,
                    why: "Legitimate financial opportunities don't come through unsolicited messages with urgent deadlines."
                });
                riskLevel = "Very High";
            }

            // Generate action steps based on content type
            if (lowerContent.includes('health') || lowerContent.includes('cancer') || lowerContent.includes('lemon water')) {
                actionSteps.push({
                    title: "Check Medical Fact-Checkers",
                    description: "Search for key terms on Snopes.com, Reuters Fact Check, or PolitiFact's health section."
                });
                actionSteps.push({
                    title: "Consult Authoritative Health Sources",
                    description: "Visit the American Cancer Society, World Health Organization (WHO), or CDC websites to verify health claims."
                });
            } else if (lowerContent.includes('government') || lowerContent.includes('political')) {
                actionSteps.push({
                    title: "Check Official Government Sources",
                    description: "Look for official announcements on government websites or verified social media accounts."
                });
                actionSteps.push({
                    title: "Cross-Reference News Sources",
                    description: "Check if reputable news organizations (Reuters, AP News, BBC) are reporting the same information."
                });
            } else if (lowerContent.includes('money') || lowerContent.includes('bank') || lowerContent.includes('click')) {
                actionSteps.push({
                    title: "Never Click Suspicious Links",
                    description: "Legitimate financial institutions don't distribute money through random messages."
                });
                actionSteps.push({
                    title: "Verify with Official Channels",
                    description: "If this claims to be from a bank, call the bank directly using their official phone number."
                });
            }

            // Default action steps
            if (actionSteps.length === 0) {
                actionSteps.push({
                    title: "Search Fact-Checking Websites",
                    description: "Look up key claims on Snopes, Reuters Fact Check, or similar reputable fact-checking sites."
                });
            }

            actionSteps.push({
                title: "Check Source Credibility",
                description: "Ask: Who originally shared this? Do they have expertise in this area? Are they known for reliable information?"
            });

            // Generate conclusion
            if (riskLevel === "Very High") {
                conclusion = "This content shows multiple strong indicators of misinformation or scam content. Exercise extreme caution and avoid sharing.";
            } else if (riskLevel === "High") {
                conclusion = "This content shows clear signs of misinformation tactics. Verify through official sources before believing or sharing.";
            } else {
                conclusion = "This content shows some concerning patterns. Apply critical thinking and verify claims before sharing.";
            }

            return `
                <div class="result-card">
                    <div class="result-header">
                        <span class="result-icon">üîç</span>
                        <span class="result-title">Summary of Claim</span>
                    </div>
                    <p>"${content.substring(0, 200)}${content.length > 200 ? '...' : ''}"</p>
                </div>

                <div class="result-card">
                    <div class="result-header">
                        <span class="result-icon">üö©</span>
                        <span class="result-title">Red Flags Identified (Risk Level: ${riskLevel})</span>
                    </div>
                    ${redFlags.map(flag => `
                        <div class="red-flag">
                            <h4>${flag.title}</h4>
                            <div class="flag-detail">
                                <span class="flag-label">What we see:</span> ${flag.what}
                            </div>
                            <div class="flag-detail">
                                <span class="flag-label">Why it's a red flag:</span> ${flag.why}
                            </div>
                        </div>
                    `).join('')}
                </div>

                <div class="action-plan">
                    <h3>‚úÖ Your Fact-Checking Action Plan</h3>
                    <p style="margin-bottom: 15px; color: #374151;">Don't just take our word for it. Here's how you can investigate this yourself:</p>
                    ${actionSteps.map((step, index) => `
                        <div class="action-step">
                            <div class="step-title">${index + 1}. ${step.title}</div>
                            <div>${step.description}</div>
                        </div>
                    `).join('')}
                </div>

                <div class="conclusion">
                    <strong>Conclusion:</strong> ${conclusion}
                </div>
            `;
        }
    </script>
</body>
</html>